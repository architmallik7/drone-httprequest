image: architmallik/httprequest:{{#if build.tag}}{{trimPrefix "v" build.tag}}{{else}}latest{{/if}}
{{#if build.tags}}
tags:
{{#each build.tags}}
  - {{this}}
{{/each}}
{{/if}}
manifests:
  -
    image: architmallik/httprequest:{{#if build.tag}}{{trimPrefix "v" build.tag}}-{{/if}}preview-linux-amd64
    platform:
      architecture: amd64
      os: linux
  -
    image: architmallik/httprequest:{{#if build.tag}}{{trimPrefix "v" build.tag}}-{{/if}}preview-linux-arm64
    platform:
      variant: v8
      architecture: arm64
      os: linux